{
	"settings":{
		"index":{
			"analysis":{
				"filter":{
					"snowball":{
						"type":"snowball",
						"language":"German2"
					},
					"ngram":{
						"type":"edgeNGram",
						"min_gram":"1",
						"max_gram":"40"
					}
					
				},
				"analyzer":{
					"id_analyzer":{
						"filter":[
							"lowercase"
						],
						"tokenizer":"keyword"
					},
					"german_analyzer":{
						"type":"custom",
						"filter":[
							"lowercase",
							"stop",
							"snowball"
						],
						"tokenizer":"standard"
					},
					"ngram_analyzer":{
						"type":"custom",
						"filter":[
							"lowercase",
							"stop",
							"ngram",
							"snowball"
						],
						"tokenizer":"letter"
					}
					
				}
				
			}
			
		}
	},
